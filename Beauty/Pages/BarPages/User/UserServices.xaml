<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beauty.Pages.BarPages.User.UserServices"
             xmlns:views="clr-namespace:Beauty.Views" xmlns:xctk="http://xamarin.com/schemas/2020/toolkit"
             xmlns:VM="clr-namespace:Beauty.ViewModels.BarPagesVM.User">
    <ContentPage.Behaviors>
        <xctk:EventToCommandBehavior EventName="Appearing"
                                     Command="{Binding PageLoadingCommand}" />
    </ContentPage.Behaviors>
    <ContentPage.BindingContext>
        <VM:UserServicesVM/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <CollectionView xctk:StateLayout.CurrentState="{Binding CurrentState}"
                        xctk:StateLayout.AnimateStateChanges="true"
                        ItemsSource="{Binding Orders}">
            <xctk:StateLayout.StateViews>
                <xctk:StateView StateKey="Empty">
                    <views:EmptyView/>
                </xctk:StateView>
            </xctk:StateLayout.StateViews>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Price}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>