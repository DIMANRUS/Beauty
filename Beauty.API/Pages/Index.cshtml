@page "/Reset/{Email}/{Token}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Beauty.API.ViewModels
@model ResetPasswordVM
@using Microsoft.Extensions.Configuration
@inject IConfiguration _config 

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Сброс пароля</title>
</head>
<body>
    <h1>Сброс пароля</h1>
    <form method="post" action="@_config["AuthSettings:Issuer"]/api/auth/reset/@RouteData.Values["Email"]/@RouteData.Values["Token"]">       
        <input type="text" asp-for="Password" placeholder="Пароль"/>
        <input type="text" asp-for="ConfirmPassword" placeholder="Повторите пароль" />
        <input type="submit" placeholder="Сбросить" />
    </form>
</body>
</html>